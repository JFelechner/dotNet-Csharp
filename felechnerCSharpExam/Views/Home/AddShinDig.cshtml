@model ShinDig
<h1>Create an Activity</h1>
<form action="/AddShinDigToDB" method="post">
    <div class="form-group">
        <label for="Name">Title</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Time">Time</label>
        <input asp-for="Time" class="form-control">
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input asp-for="Date" class="form-control" min="0">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DurationInt">Duration</label>
        <input asp-for="DurationInt" class="form-control">
        <span asp-validation-for="DurationInt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select name="DurationStr" class="form-control">
            <option value="Hours">Hours</option>
            <option value="Minutes">Minutes</option>
            <option value="Days">Days</option>
        </select>
        <span asp-validation-for="DurationStr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" name="UserId" value="@ViewBag.LoggedInUser.UserId">
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-info">
    </div>
</form>