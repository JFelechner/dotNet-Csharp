@{
    ViewData["Title"] = "Home Page";
}

@model Dish

<div class="text-center  mt-4">
    <div class="container px-4">
        <h1>@Model.NameOfDish</h1>
        <h4>@Model.ChefName</h4>
        <div class="row gx-5">
            <div class="col">
                <h4 class="d-flex justify-content-between ms-4"><a href="/">Home</a></h4>

                <div class="p-3 border bg-light p-4 d-flex justify-content-start">
                    <div>
                        <p>@Model.Description</p>
                        <br>
                        <p>Calories: @Model.Calories</p>
                        <p>Tastiness: @Model.Tastiness</p>

                    </div>

                </div>
                <div class="mt-3">
                    <a class="btn btn-danger" href="delete/@Model.DishId">Delete</a>
                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <a class="btn btn-light" href="/edit/@Model.DishId">Edit</a>
                </div>

            </div>
        </div>
    </div>
</div>