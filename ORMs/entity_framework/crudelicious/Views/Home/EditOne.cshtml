@{
    ViewData["Title"] = "Home Page";
}

@model Dish

<div class="text-center  mt-4">
    <div class="container px-4">
        <h1>Add a new Dish!</h1>
        <div class="row gx-5">
            <div class="col">
                <h4 class="d-flex justify-content-between ms-4"><a href="/">Home</a></h4>

                <form action="/update/@Model.DishId" method="post">
                    <div class="p-3 border bg-light d-flex justify-content-between p-4">

                        <div>
                            <div class="form-group">
                                <label for="ChefName">Chefs Name</label>
                                <input asp-for="ChefName" class="form-control">
                                <span asp-validation-for="ChefName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="NameOfDish">Name of Dish</label>
                                <input asp-for="NameOfDish" class="form-control">
                                <span asp-validation-for="NameOfDish" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Calories"># of Calories</label>
                                <input asp-for="Calories" class="form-control">
                                <span asp-validation-for="Calories" class="text-danger"></span>
                            </div>
                        </div>

                        <div>
                            <div class="form-group">
                                <label for="Tastiness">Tastiness</label>
                                <select asp-for="Tastiness" class="form-select">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                                <span asp-validation-for="Tastiness" class="text-danger"></span>
                            </div>
                        </div>

                        <div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary d-flex justify-content-start">Add Dish</button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>