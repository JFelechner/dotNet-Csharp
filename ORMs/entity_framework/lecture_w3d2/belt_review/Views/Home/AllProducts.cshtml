<h1>All Products</h1>
<div class="d-flex flex-wrap">
    @{
        foreach (Product p in ViewBag.AllProducts)
        {
            <div class="card" style="width: 18rem;">
                <img src="@p.Picture" class="card-img-top" alt="@p.ProductName">
                <div class="card-body">
                    <h5 class="card-title"><a href="/Product/@p.ProductId">@p.ProductName</a></h5>
                    <p class="card-text">$@p.Price</p>
                    @{
                        if (p.Quantity > 0)
                        {
                            <p class="card-text">In stock: @p.Quantity</p>
                        }
                        else
                        {
                            <p class="card-text text-danger">NO STOCK</p>
                        }
                    }
                </div>
            </div>
        }

    }
</div>